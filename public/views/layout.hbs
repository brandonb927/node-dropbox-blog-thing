<!doctype html>
<html prefix="og: http://ogp.me/ns#" xmlns:og="http://ogp.me/ns#" class="no-js">
<head>
  <meta charset="utf-8">
  <title>{{site.title}} | {{#if post}}{{post.title}}{{else}}{{site.description}}{{/if}}</title>
  <base href="{{baseUrl}}/">

  <link href="/assets/css/site.css" rel="stylesheet">

  <!-- WebFont loader -->
  <script src="//ajax.googleapis.com/ajax/libs/webfont/1.5.3/webfont.js"></script>
  <script>
  WebFontConfig = {
    google: {
      families: ['Roboto:300,400,500', 'Lato:400', 'Droid Sans Mono', 'Vollkorn']
    }
  };
  (function(){var e=document.createElement("script");e.src=("https:"==document.location.protocol?"https":"http")+"://ajax.googleapis.com/ajax/libs/webfont/1.5.0/webfont.js";e.type="text/javascript";e.async="true";var t=document.getElementsByTagName("script")[0];t.parentNode.insertBefore(e,t)})();
  </script>

  <!-- Highlight.js -->
  <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/highlight.js/8.1/styles/tomorrow-night-eighties.min.css">
  <script src="http://cdnjs.cloudflare.com/ajax/libs/highlight.js/8.1/highlight.min.js"></script>

  <!-- Ugh, I guess include jQuery... -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

  <!-- Google Analytics -->
  {{#if googleAnalytics }}
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
    ga('create', '{{googleAnalytics}}', '{{site.domain}}');
    ga('send', 'pageview');
  </script>
  {{/if}}
</head>
<body itemscope itemtype="http://schema.org/WebPage">
  <div class="site-container">
    <header class="site-header" role="banner" itemscope itemtype="http://schema.org/WPHeader">
      <h1 class="header-title" itemprop="headline"><a href="{{baseUrl}}">{{site.title}}</a></h1>

      <nav class="header-nav" role="navigation" itemscope itemtype="http://schema.org/SiteNavigationElement">
        <ul class="nav-menu menu-list">
          <li itemprop="url"><a href="{{ site.baseUrl }}">Blog</a></li>
          {{#each pages}}
          <li itemprop="url"><a href="{{ site.baseUrl }}{{ this.permalink }}" title="{{ this.title }}" itemprop="name">{{ this.title }}</a></li>
          {{/each}}
        </ul>
      </nav>
    </header>

    <main class="grid gutter" role="main" itemscope itemprop="mainContentOfPage" itemtype="http://schema.org/Blog">
      <div class="column two-thirds">
        <div class="module">
        {{{body}}}
        </div>
      </div>

      <div class="column one-third">
        <div class="module">
          <div class="site-bio">
            <h3>Bio</h3>
            <img src="{{gravatar}}" class="site-avatar" />
            <p>{{site.description}}</p>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script>
  $(document).ready(function () {
    $('pre code').each(function (i, e) {
      $(e).addClass('hljs-code'); // to help with styling of `pre` block
      hljs.configure({ languages: [e.className] });
      hljs.highlightBlock(e);
    });
  });
  </script>
</body>
</html>
