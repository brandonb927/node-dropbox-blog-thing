<div id="posts_list" class="feed">
  {{> posts}}
</div>

{{#if pagination}}
<nav class="pagination" role="navigation" itemscope itemtype="http://schema.org/SiteNavigationElement" >
  {{#if pagination.prev}}
  <a href="/page/{{pagination.prev}}" rel="prev" itemprop="name" title="Newer Posts" class="pagination-prev">&larr; Newer posts</a>
  {{/if}}
  {{#if pagination.next}}
  <a href="/page/{{pagination.next}}" rel="next" itemprop="name" title="Older Posts" class="pagination-next">Older posts &rarr;</a>
  {{/if}}
</nav>
{{/if}}
