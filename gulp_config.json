{
  "vars": {
    "site_coffee":  "site.coffee",
    "site_min_js":  "site.min.js",
    "site_pack":    "site-pack.js",
    "site_css":     "site.css",
    "site_min_css": "site.min.css",
    "vendor_pack":  "vendor-pack.js"
  },
  "paths": {
    "src": {
      "fonts": "src/fonts",
      "scripts": "src/scripts",
      "styles": "src/styles",
      "images": "src/images"
    },
    "templates": {
      "src": "src/views/**/*.html",
      "dest": "public/views"
    },
    "fonts": {
      "src": "src/fonts/**/*",
      "dest": "public/assets/fonts"
    },
    "images": {
      "src": "src/images/**/*",
      "dest": "public/images"
    },
    "styles": {
      "src": "src/styles/site.less",
      "src_all": "src/styles/**/*",
      "dest": "public/assets/css"
    },
    "scripts": {
      "src": "src/scripts/site.coffee",
      "dest": "public/assets/js"
    },
    "vendor": {
      "scripts": [
        "bower_components/fastclick/lib/fastclick.js",
        "bower_components/highlightjs/highlight.pack.js"
      ]
    },
    "app": {
      "src": "app/**/*.coffee"
    }
  }
}
